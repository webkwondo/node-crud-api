{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2022",
    "allowJs": true,
    "sourceMap": true,

    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": true,
    "strict": true,

    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,

    "baseUrl": "src",
    "paths": {
        "*": ["../node_modules/*"],
        "@server/*": ["./*"]
      },
    "outDir": "./dist",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
